<article>
  <h2>
    <%= country.name.official %>
  </h2>
  <img src="<%= country.flags.svg %>" alt="<%= country.name.official %>flag">
  <p><span>Population: </span>
    <%= country.population %>
  </p>
  <p><span>Region: </span>
    <%= country.region %>
  </p>
  <p><span>Capital: </span>
    <%= country.capital %>
  </p>
</article>